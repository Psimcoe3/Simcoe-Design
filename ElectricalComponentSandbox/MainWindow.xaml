<Window x:Class="ElectricalComponentSandbox.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:ElectricalComponentSandbox"
    xmlns:converters="clr-namespace:ElectricalComponentSandbox.Converters"
    xmlns:h="http://helix-toolkit.org/wpf"
    mc:Ignorable="d"
    Icon="app.ico"
    Title="Electrical Component Sandbox" Height="800" Width="1400"
    WindowState="Maximized"
    KeyDown="Window_KeyDown">
    
<Window.Resources>
    <!-- Value Converters -->
    <converters:NullToVisibilityConverter x:Key="NullToVisibilityConverter"/>
    <converters:NotNullToVisibilityConverter x:Key="NotNullToVisibilityConverter"/>
        
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="10,5"/>
        </Style>
        <Style TargetType="TextBlock">
            <Setter Property="Margin" Value="5"/>
        </Style>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="5"/>
        </Style>
    </Window.Resources>
    
    <DockPanel>
        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="New" Click="NewFile_Click" InputGestureText="Ctrl+N"/>
                <MenuItem Header="Open..." Click="OpenFile_Click" InputGestureText="Ctrl+O"/>
                <MenuItem Header="Save" Click="SaveFile_Click" InputGestureText="Ctrl+S"/>
                <MenuItem Header="Save As..." Click="SaveFileAs_Click" InputGestureText="Ctrl+Shift+S"/>
                <Separator/>
                <MenuItem Header="Export JSON..." Click="ExportJson_Click" InputGestureText="Ctrl+E"/>
                <Separator/>
                <MenuItem Header="Exit" Click="Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Delete Selected" Click="DeleteComponent_Click" InputGestureText="Delete"/>
                <MenuItem Header="Delete Last Bend Point" Click="DeleteLastBendPoint_Click"/>
            </MenuItem>
            <MenuItem Header="View">
                <MenuItem Header="Show Grid" IsCheckable="True" IsChecked="{Binding ShowGrid}"/>
                <MenuItem Header="Snap to Grid" IsCheckable="True" IsChecked="{Binding SnapToGrid}"/>
            </MenuItem>
        </Menu>
        
        <!-- Toolbar -->
        <ToolBar DockPanel.Dock="Top">
            <Button Content="Conduit" Click="AddConduit_Click"/>
            <Button Content="Box" Click="AddBox_Click"/>
            <Button Content="Panel" Click="AddPanel_Click"/>
            <Button Content="Support" Click="AddSupport_Click"/>
            <Separator/>
            <Button x:Name="EditConduitPathButton" Content="Edit Conduit Path" Click="ToggleEditConduitPath_Click"/>
            <Separator/>
            <TextBlock Text="Grid Size:" VerticalAlignment="Center"/>
            <TextBox Text="{Binding GridSize}" Width="50"/>
        </ToolBar>
        
        <!-- Main Content -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="300"/>
            </Grid.ColumnDefinitions>
            
            <!-- Library Browser -->
            <Border Grid.Column="0" BorderBrush="Gray" BorderThickness="0,0,1,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Component Library" 
                             FontWeight="Bold" FontSize="14" 
                             Padding="10" Background="LightGray"/>
                    <ListBox x:Name="LibraryListBox" 
                           ItemsSource="{Binding LibraryComponents}"
                           DisplayMemberPath="Name"
                           MouseDoubleClick="LibraryItem_DoubleClick"/>
                </DockPanel>
            </Border>
            
            <!-- 3D Viewport -->
            <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="0,0,1,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="3D Viewport" 
                             FontWeight="Bold" FontSize="14" 
                             Padding="10" Background="LightGray"/>
                    
                    <h:HelixViewport3D x:Name="Viewport" 
                                     Background="White"
                                     ShowCoordinateSystem="True"
                                     ShowViewCube="True"
                                     MouseLeftButtonDown="Viewport_MouseLeftButtonDown">
                        
                        <!-- Lighting -->
                        <h:DefaultLights/>
                        
                        <!-- Grid -->
                        <h:GridLinesVisual3D x:Name="GridLines" 
                                           Visible="{Binding ShowGrid}"
                                           Width="100"
                                           Length="100"
                                           MinorDistance="1"
                                           MajorDistance="10"
                                           Thickness="0.01"
                                           Fill="LightGray"/>
                    </h:HelixViewport3D>
                </DockPanel>
            </Border>
            
            <!-- Properties Panel -->
            <Border Grid.Column="2" BorderBrush="Gray" BorderThickness="0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Properties" 
                             FontWeight="Bold" FontSize="14" 
                             Padding="10" Background="LightGray"/>
                    
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="PropertiesPanel" Margin="10">
                            <TextBlock Text="Select a component to view properties" 
                                     FontStyle="Italic" Foreground="Gray"
                                     Visibility="{Binding SelectedComponent, 
                                     Converter={StaticResource NullToVisibilityConverter}}"/>
                            
                            <StackPanel x:Name="ComponentProperties" 
                                      Visibility="{Binding SelectedComponent, 
                                      Converter={StaticResource NotNullToVisibilityConverter}}">
                                
                                <!-- Basic Properties -->
                                <TextBlock Text="Basic Properties" FontWeight="Bold"/>
                                <TextBlock Text="Name:"/>
                                <TextBox x:Name="NameTextBox"/>
                                
                                <TextBlock Text="Type:"/>
                                <TextBox x:Name="TypeTextBox" IsReadOnly="True"/>
                                
                                <!-- Transform Properties -->
                                <TextBlock Text="Transform" FontWeight="Bold" Margin="0,10,0,0"/>
                                
                                <TextBlock Text="Position X:"/>
                                <TextBox x:Name="PositionXTextBox"/>
                                
                                <TextBlock Text="Position Y:"/>
                                <TextBox x:Name="PositionYTextBox"/>
                                
                                <TextBlock Text="Position Z:"/>
                                <TextBox x:Name="PositionZTextBox"/>
                                
                                <TextBlock Text="Rotation X:"/>
                                <TextBox x:Name="RotationXTextBox"/>
                                
                                <TextBlock Text="Rotation Y:"/>
                                <TextBox x:Name="RotationYTextBox"/>
                                
                                <TextBlock Text="Rotation Z:"/>
                                <TextBox x:Name="RotationZTextBox"/>
                                
                                <!-- Parameters -->
                                <TextBlock Text="Parameters" FontWeight="Bold" Margin="0,10,0,0"/>
                                
                                <TextBlock Text="Width:"/>
                                <TextBox x:Name="WidthTextBox"/>
                                
                                <TextBlock Text="Height:"/>
                                <TextBox x:Name="HeightTextBox"/>
                                
                                <TextBlock Text="Depth:"/>
                                <TextBox x:Name="DepthTextBox"/>
                                
                                <TextBlock Text="Material:"/>
                                <TextBox x:Name="MaterialTextBox"/>
                                
                                <TextBlock Text="Elevation:"/>
                                <TextBox x:Name="ElevationTextBox"/>
                                
                                <TextBlock Text="Color:"/>
                                <TextBox x:Name="ColorTextBox"/>
                                
                                <!-- Conduit-specific Properties -->
                                <StackPanel x:Name="ConduitProperties" Visibility="Collapsed">
                                    <TextBlock Text="Conduit Settings" FontWeight="Bold" Margin="0,10,0,0"/>
                                    
                                    <TextBlock Text="Bend Points:"/>
                                    <TextBlock x:Name="BendPointsTextBlock" Text="0" Foreground="Gray" FontStyle="Italic" Margin="5,0,0,5"/>
                                    
                                    <Button x:Name="ClearBendPointsButton" Content="Clear All Bend Points" 
                                            Click="ClearBendPoints_Click" Margin="5"/>
                                </StackPanel>
                                
                                <!-- Actions -->
                                <Button Content="Apply Changes" Click="ApplyProperties_Click" Margin="0,10,0,0"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </DockPanel>
            </Border>
        </Grid>
    </DockPanel>
</Window>
